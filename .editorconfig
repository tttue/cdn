# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
indent_style = tab
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# linux
[*.sh]
end_of_line = lf

#----------------------------------------------
# 4 space indentation
# Python
[*.py]
indent_style = space
indent_size = 4

# PHP
[*.php]
indent_style = space
indent_size = 4

# Perl
[*.{pl, pm}]
indent_style = space
indent_size = 4

#----------------------------------------------
# 2 tab indentation
# JSON
[*.json]
indent_style = tab
indent_size = 2


#----------------------------------------------
# 3 tab indentation
# C++
[*.{c,cpp,c++,h,hxx,hpp,h++}]
indent_style = tab
indent_size = 3

# C#
[*.cs]
indent_style = tab
indent_size = 3

# Java
[*.java]
indent_style = tab
indent_size = 3


# Web
[*.{css,xml,html,htm,js}]
indent_style = tab
indent_size = 3

#----------------------------------------------
# 2 space indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2

#Windows files
[*.{bat,cmd,ps1,txt,log}]
end_of_line = crlf
